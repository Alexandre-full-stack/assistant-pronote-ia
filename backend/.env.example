# Exemple de fichier .env pour le backend
# Copiez ce fichier vers .env et remplissez avec vos vraies valeurs

# Serveur
PORT=8000
HOST=0.0.0.0
ENV=production
DEBUG=False

# Sécurité (générez avec: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your_secret_key_here_32_chars_minimum
JWT_SECRET_KEY=your_jwt_secret_key_here_32_chars_minimum
ENCRYPTION_KEY=your_encryption_key_here_32_chars_minimum

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS - URLs autorisées (séparées par des virgules)
# Développement: http://localhost:3000
# Production: https://votre-username.github.io
ALLOWED_ORIGINS=http://localhost:3000

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
SESSION_EXPIRATION_SECONDS=86400

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# OpenRouter API (obtenez votre clé sur https://openrouter.ai/)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Selenium (pour authentification CAS complexe)
SELENIUM_HEADLESS=True
SELENIUM_TIMEOUT_SECONDS=30
WEBDRIVER_PATH=/usr/local/bin/chromedriver

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Pronote
PRONOTE_DEFAULT_ACCOUNT_TYPE=3
PRONOTE_REQUEST_TIMEOUT=30

# Monitoring (optionnel)
SENTRY_DSN=
ENABLE_METRICS=True
